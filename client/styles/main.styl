@import 'nib'

$bg-color = #000

html {
  width 100%
  height 100%
}

body {
  width 100%
  height 100%
	background-color $bg-color
}

.flex {
  display flex
  flex-flow row wrap
  justify-content space-between
  align-items center
  height 100%


  .box {
    width 200px
    height 200px
    background-color green
    border 1px solid #fff
    transition all .2s ease-in-out

    @media all and (max-width: 991px) {
      background-color blue
    }
  }
}

